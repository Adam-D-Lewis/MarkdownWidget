<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.markdownwidget">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/markdown_viewer_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarkdownWidget"
        tools:targetApi="31">
        <!--        android:roundIcon="@mipmap/ic_launcher_round"-->

        <!-- Main Activity -->
        <activity
            android:name="com.adamdlewis.markdownwidget.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MarkdownWidget">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Widget Provider -->
        <activity android:name="com.adamdlewis.markdownwidget.MarkdownWidgetConfigureActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.adamdlewis.markdownwidget.MarkdownWidgetProvider"
            android:exported="true"
            android:label="Markdown Widget"
            android:icon="@mipmap/markdown_viewer_icon">

            <!-- Intent filter for widget updates -->
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <!-- Declare the widget's metadata -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
        <!-- RemoteViewsService -->
        <service android:name="com.adamdlewis.markdownwidget.MdRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <receiver android:name="com.adamdlewis.markdownwidget.UpdateReceiver" android:exported="false" />
    </application>

</manifest>
